@model CarManager.Models.Store.Model

@{
    ViewData["Title"] = "Details";
}

<style>
    /* CSS styles */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f9f9f9;
    }

    h1 {
        color: #333;
        text-align: center;
        padding: 20px 0;
    }

    h4 {
        color: #333;
        margin-bottom: 20px;
    }

    dl.row {
        margin-bottom: 20px;
    }

    dt {
        font-weight: bold;
        margin-bottom: 10px;
    }

    dd {
        margin-left: 0;
    }

    a {
        color: #007bff;
        text-decoration: none;
        margin-right: 10px;
    }
</style>

<h1>Details</h1>

<div>
    <h4>Model</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
